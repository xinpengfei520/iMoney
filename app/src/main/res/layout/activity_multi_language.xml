<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_multi_language"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    tools:context="com.xpf.p2p.ui.multilanguage.view.MultiLanguageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:orientation="horizontal"
        android:paddingTop="36dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="2dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/language_select"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:text="@string/save_btn"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rgLanguages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white">

        <RadioButton
            android:id="@+id/rbSimpleChinese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_shape_4dp_normal"
            android:button="@null"
            android:drawableRight="@drawable/rg_checked_selector"
            android:padding="10dp"
            android:text="简体中文"
            android:textColor="@color/gray_a"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_bg" />

        <RadioButton
            android:id="@+id/rbFantiChinese"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_shape_4dp_normal"
            android:button="@null"
            android:drawableRight="@drawable/rg_checked_selector"
            android:padding="10dp"
            android:text="繁體中文"
            android:textColor="@color/gray_a"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/gray_bg" />

        <RadioButton
            android:id="@+id/rbEnglish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_shape_4dp_normal"
            android:button="@null"
            android:drawableRight="@drawable/rg_checked_selector"
            android:padding="10dp"
            android:text="English"
            android:textColor="@color/gray_a"
            android:textSize="16sp" />
    </RadioGroup>

</LinearLayout>
